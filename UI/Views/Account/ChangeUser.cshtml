@model ChangeUserViewModel

<div class="container">
    <form asp-action="ChangeUser" method="post" id="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FullName" class="control-label white"></label>
            <input asp-for="FullName" class="form-control" required/>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label white"></label>
            <input asp-for="PhoneNumber" class="form-control" required/>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label white">Дата рождения</label>
            <input asp-for="Date" class="form-control" required/>
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
                
            <div class="form-group mt-2">
                <input asp-for="Sex" type="radio" class="btn-check" id="option1" autocomplete="off" value="Мужской" required>
                <label class="btn btn-primary" for="option1">Мужской</label>
                <input asp-for="Sex" type="radio" class="btn-check" id="option2" autocomplete="off" value="Женский" required>
                <label class="btn btn-primary" for="option2">Женский</label>
            </div>

        <br />
        <div class="form-group">
            <div>
            <input type="submit" asp-action="ChangeUser" asp-route-vm =@Model value="Потвердить" class="btn btn-primary" />
            </div>
            <div>
                <a class="btn btn-primary" asp-action="UserProfile" asp-route-login="@User.Identity.Name">Назад</a>
            </div>
        </div>
    </form>
</div>