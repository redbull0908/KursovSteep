@model ChangeDoctorViewModel

<style>
    .space {
        margin-bottom: 10px;
    }

    .white {
        color: white;
    }

    .form-control {
        width: 30%;
    }

    .btn-check:checked + .btn-primary {
        background-color: mediumslateblue;
    }

    .btn-primary:hover {
        background-color: mediumslateblue;
    }

</style>

<div class="container">
    <form asp-action="ChangeUser" method="post" id="form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FullName" class="control-label white"></label>
            <input asp-for="FullName" class="form-control" required />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label white">Описание врача</label>
            <textarea asp-for="Description" class="form-control" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <div>
                <input type="submit" asp-action="ChangeDoctor" asp-route-vm=@Model value="Потвердить" class="btn btn-primary" />
            </div>
            <div>
                <a class="btn btn-primary" asp-action="DocProfile">Назад</a>
            </div>
        </div>
    </form>
</div>